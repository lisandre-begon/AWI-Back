const gestionnaire = require('../models/gestionnaireModels');

// Créer un gestionnaire
exports.createGestionnaire = async (req, res) => {
  try {
    const gestionnaire = await gestionnaire.create(req.body);
    res.status(201).json(gestionnaire);
  } catch (error) {
    res.status(500).json({ message: error.message });
  }
};

// 
exports.getAllgestionnaires = async (res) => {
  try {
    const gestionnaires = await gestionnaire.findAll();
    res.status(200).json(gestionnaires);
  } catch (error) {
    res.status(500).json({ message: error.message });
  }
};

// Obtenir un gestionnaire par ID
exports.getGestionnaireById = async (req, res) => {
  try {
    const gestionnaire = await gestionnaire.findByPk(req.params.id);
    if (!gestionnaire) {
      return res.status(404).json({ message: 'gestionnaire non trouvé' });
    }
    res.status(200).json(gestionnaire);
  } catch (error) {
    res.status(500).json({ message: error.message });
  }
};

// Mettre à jour un gestionnaire
exports.updateGestionnaire = async (req, res) => {
  try {
    const gestionnaire = await gestionnaire.findByPk(req.params.id);
    if (!gestionnaire) {
      return res.status(404).json({ message: 'gestionnaire non trouvé' });
    }
    await gestionnaire.update(req.body);
    res.status(200).json(gestionnaire);
  } catch (error) {
    res.status(500).json({ message: error.message });
  }
};

// Supprimer un gestionnaire
exports.deleteGestionnaire = async (req, res) => {
  try {
    const gestionnaire = await gestionnaire.findByPk(req.params.id);
    if (!gestionnaire) {
      return res.status(404).json({ message: 'gestionnaire non trouvé' });
    }
    await gestionnaire.destroy();
    res.status(204).json({ message: 'gestionnaire supprimé' });
  } catch (error) {
    res.status(500).json({ message: error.message });
  }
};

